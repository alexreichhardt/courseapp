<div class="container">
  <h1><%= @course.title %> </h1>
  <!-- solid bookmark if bookmarked by user, otherwise regular bookmark icon -->
  <% if @bookmarked == false %>
    <i><%= link_to("", course_bookmarks_path(@course), method: :post, :class => "far fa-bookmark") %></i>
  <% else %>
    <i><%= link_to("", course_bookmark_path(@course), method: :delete, :class => "fas fa-bookmark") %></i>
  <% end %>
  <!-- Course description -->
  <%= @course.description.html_safe %>

  <!-- Print subtitle if existing -->
  <% unless @course.subtitle.nil? %>
    <%= @course.subtitle %>
  <% end %>


    <!-- Print Reviews -->

    <h3>Reviews</h3>

    <div class="panel panel-default">
      <%@reviews.each do |review| %>
        <div class="single-review">
          <div class="review-profile">
            <% author_id = review.user_id %>
            <% author = User.find(author_id) %>
            <% author_avatar = author.avatar_image %>
            <img src='<%= author_avatar %>' class="review-avatar">
            <p class="by-name"><%= author.name %></p>
          </div>
          <div class="review-content">
            <h4><%= review.title %> </h4>

            <p><%= review.content %> </p>
            <% t = review.rating.to_i %>
              <div class="stars">
                <% t.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <% (5-t).times do %>
                  <i class="far fa-star"></i>
                <% end %>
              </div>
          </div>
        </div>
      <%end%>
    </div>
  <%= link_to "Add Review", new_course_course_review_path(@course.id), class: "btn-primary" %>
</div>


