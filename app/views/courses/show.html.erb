    </div>

    <!-- card on the right side -->
    <div class="col-xs-12 col-md-4">
      <div class="card course-details">
        <div class= "course-image" style="background-image: url(<%= @course.image %>)"></div>
        <hr>
        <%= link_to "Start course on #{@course.plattform}", @course.url, class: "btn btn-primary", target: "_blank" %>
        <hr>
        <ul>
          <li>Price: <%= @course.price %></li>
          <% unless @course.duration == "" || @course.duration == "0" %>
            <li><%= "#{@course.duration} #{@course.duration_unit}" %></li>
          <% end %>
          <li><%= @course.knowledge_level.capitalize %></li>
          <% if @course.active %>
            <li>Status: Active</li>
          <% else %>
            <li>Status: Currently inactive</li>
          <% end %>
          <li>Offering platform: <%= @course.plattform %></li>
        </ul>
      </div>
    </div>

  </div>

