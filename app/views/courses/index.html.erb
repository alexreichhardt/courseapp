<div class="results-row">

  <!-- left side -->
  <div class="col-xs-12 col-md-2">
    <div class="filter-container filters-card">
      <%= simple_form_for :criteria, url: courses_path, :method => :get do |f| %>
      <!-- knowledge level selector -->
        <div class="filter-selectors">
          <div class="filter">
          <%= f.input :knowledge_level, as: :check_boxes, collection: ["beginner","intermediate", "advanced"], checked: params.dig(:criteria, :knowledge_level) %>
          </div>
            <!-- plattform selector -->
          <div class="filter">
          <%= f.input :plattform, as: :check_boxes, collection: ["Udemy","Udacity", "Edx"], checked: params.dig(:criteria, :plattform) %>
          </div>
            <!-- hidden fields -->
          <%= f.hidden_field :search, value: @search_input %>
            <!-- submit button -->
          <div>
            <%= f.button :submit, "Specify search", class: "btn-primary"%>
          </div>
        </div>
      <% end %>
    <!-- filter-container -->
    </div>
  <!-- left side -->
  </div>

  <!-- right side -->
  <div class="col-xs-12 col-md-10">
    <div class="container">
      <h1>All Courses</h1>
      <% @courses.each do |course| %>
        <div class="card-result card-course-preview">
                <div class="card-header">
                  <h3><%= link_to course.title, course_path(course) %></h3>
                </div>
                <div class="card-icons">
                  <div class="icons">
                    <i class="fas fa-graduation-cap"></i>
                    <p><%= course.knowledge_level %></p>
                  </div>
                  <div class="icons">
                    <i class="far fa-clock"></i>
                    <p><%= course.duration%></p>
                  </div>
                  <div class="icons">
                    <i class="fas fa-coins"></i>
                    <p><%= course.price %></p>
                  </div>
                </div>
                <div class="card-description">
                  <p><%= truncate(course.description, length: 100, escape: false) %></p>
                </div>
              </div>
      <% end %>
    </div>
  <!-- right side -->
  </div>
</div>


