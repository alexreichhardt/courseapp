<div class="results-row">
  <div class="container special">
    <div class="row">
  <!-- left side -->
  <div class="col-xs-12 col-md-3">
    <div class="filter-container filters-card">
      <%= simple_form_for :criteria, url: courses_path, :method => :get do |f| %>
      <!-- knowledge level selector -->
        <div class="filter-selectors">
          <div class="filter">
              <!-- select box beginner -->
              <h3>Knowledge level</h3>
              <div class="form-check category-choices">
                  <input class="form-check-input hidden required" type="checkbox" value="beginner" name="criteria[knowledge_level][]" id="criteria_knowledge_level_beginner">
                  <label class="collection_check_boxes category-choice" for="criteria_knowledge_level_beginner">Beginner</label>
              </div>
              <!-- select box intermediate -->
              <div class="form-check category-choices">
                  <input class="form-check-input hidden required" type="checkbox" value="intermediate" name="criteria[knowledge_level][]" id="criteria_knowledge_level_intermediate">
                  <label class="collection_check_boxes category-choice" for="criteria_knowledge_level_intermediate">Intermediate</label>
              </div>
              <!-- select box intermediate -->
              <div class="form-check category-choices">
                  <input class="form-check-input hidden required" type="checkbox" value="advanced" name="criteria[knowledge_level][]" id="criteria_knowledge_level_advanced">
                  <label class="collection_check_boxes category-choice" for="criteria_knowledge_level_advanced">Advanced</label>
              </div>
          <div class="filter">
              <h3>Platform</h3>
              <div class="form-check category-choices">
                  <input class="form-check-input hidden required" type="checkbox" value="Udemy" name="criteria[plattform][]" id="criteria_knowledge_level_udemy">
                  <label class="collection_check_boxes category-choice" for="criteria_knowledge_level_udemy">Udemy</label>
              </div>
              <div class="form-check category-choices">
                  <input class="form-check-input hidden required" type="checkbox" value="Udacity" name="criteria[plattform][]" id="criteria_knowledge_level_udacity">
                  <label class="collection_check_boxes category-choice" for="criteria_knowledge_level_udacity">Udacity</label>
              </div>
              <div class="form-check category-choices">
                  <input class="form-check-input hidden required" type="checkbox" value="Edx" name="criteria[plattform][]" id="criteria_knowledge_level_edx">
                  <label class="collection_check_boxes category-choice" for="criteria_knowledge_level_edx">Edx</label>
              </div>
          </div>
      <!-- filter-selectors -->
      </div>
            <!-- plattform selector -->



            <!-- hidden fields -->
          <%= f.hidden_field :search, value: @search_input %>
            <!-- submit button -->
          <div>
            <%= f.button :submit, "Specify search", class: "btn-primary"%>
          </div>
        </div>
      <% end %>
    <!-- filter-container -->
    </div>
  <!-- left side -->
  </div>

  <!-- right side -->
  <div class="col-xs-12 col-md-9">
    <div class="container1">
      <h1>All Courses</h1>
      <% @courses.each do |course| %>
        <div class="card-result card-course-preview">
                <div class="card-header">
                  <h3><%= link_to course.title, course_path(course) %></h3>
                </div>
                <div class="card-icons">
                  <div class="icons">
                    <i class="fas fa-graduation-cap"></i>
                    <p><%= course.knowledge_level %></p>
                  </div>
                  <div class="icons">
                    <i class="far fa-clock"></i>
                    <p><%= course.duration%></p>
                  </div>
                  <div class="icons">
                    <i class="fas fa-coins"></i>
                    <p><%= course.price %></p>
                  </div>
                </div>
                <div class="card-description">
                  <p><%= truncate(course.description, length: 100, escape: false) %></p>
                </div>
              </div>
      <% end %>
    </div>
  <!-- right side -->
  </div>
  </div>
  </div>
</div>


