<%- if controller_name != 'sessions' %>
  <p>You already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "link" %></p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
 <p>You don't have an account yet? <%= link_to "Sign in", new_registration_path(resource_name), class: "link" %></p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p>Forgot your password? <%= link_to "Click here", new_password_path(resource_name), class: "link" %></p><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name, class: "link") %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "link" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "link" %><br />
  <% end -%>
<% end -%>
